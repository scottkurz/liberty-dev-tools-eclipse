pipeline {
    agent any
    
    tools {
        jdk 'java17-semeru'
        xvfb 'gui-test'
        maven 'maven-3.8.6'
        gradle 'gradle-7.6.1'
    }
    
    stages {
        stage('Clone') {
            steps {
                dir('liberty-tools-eclipse') {
                    // Clone git repo
                    git branch: 'mwf-custom-config',
                        url: 'https://github.com/scottkurz/liberty-tools-eclipse.git'
                }
            }
        }
        
        stage('Install test tooling') {
            steps {
                dir('liberty-tools-eclipse') {
                    // Install swt jni libraries
                    sh "sudo apt update"
                    sh 'sudo apt install dialog apt-utils'
                    sh "sudo apt install -y libswt-gtk-4-jni"
                    sh "mkdir -p ~/.swt/lib/linux/x86_64/"
                    sh "ln -s /usr/lib/jni/libswt-* ~/.swt/lib/linux/x86_64/"
                    
                    // Install XVFB
                    sh "sudo apt install -y xvfb"
                    
                    // Install Metacity window manager (and avoid prompts)
                    sh "sudo DEBIAN_FRONTEND=noninteractive apt install -y metacity -q"
                }
            }
        }
        
        stage('Test on Eclipse 2Q2023') {
            steps {
                dir('liberty-tools-eclipse') {
                    script {
                        try {
                            wrap([$class: 'Xvfb', installationName: 'gui-test', autoDisplayName: true, debug: true, parallelBuild: true, screen: '1680x1050x24']) {
                                sh "metacity --sm-disable --replace &"
                                sh "mvn clean verify -Dtycho.disableP2Mirrors=true -Declipse.target=2Q2023 -Dosgi.debug=./tests/resources/ci/debug.opts -DtestAppImportWait=120000 -Dtycho.showEclipseLog -e"
                            }
                        } finally {
                            sh "cd tests/target/surefire-reports && zip -r 2Q2023-test-reports.zip ."
                            archiveArtifacts artifacts: 'tests/target/surefire-reports/2Q2023-test-reports.zip', fingerprint: true
                        }
                    }
                }
            }
        }
    }
}
